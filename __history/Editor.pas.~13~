unit Editor;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  FMX.Controls.Presentation, FMX.StdCtrls, System.Rtti, FMX.Grid.Style,
  FMX.ScrollBox, FMX.Grid, FMX.Edit,

  iniFiles;

type
  TForm1 = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    btnLimparDeslimpar: TButton;
    btnImprimirt: TButton;
    btnExecutar: TButton;
    btnGerarExemplo: TButton;
    Edit1: TEdit;
    Grid1: TGrid;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  ConfigIni : TIniFile;
  BancoDeDadosConectado : String;

implementation
begin
  ConfigIni := TIniFile.Create('./Config.ini');
  BancoDeDadosConectado := ConfigIni.ReadString('Base de Dados','SMDB','Não encontrado');
  showMessage('Banco de dados conectado: ' + BancoDeDadosConectado);
end.
